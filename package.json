{
  "private": true,
  "scripts": {
    "build": "redbud-scripts turbo --cmd build",
    "build:examples": "pnpm -r --filter @example/* run build",
    "clean": "rimraf dist",
    "dev": "redbud-scripts turbo --cmd dev",
    "prepare": "husky install",
    "release": "redbud-scripts release",
    "test": "vitest run",
    "tsc:check": "tsc --noEmit",
    "turbo:clean": "rimraf .turbo"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@pnpm/lockfile-file": "^5.0.4",
    "@pnpm/logger": "^4.0.0",
    "@types/loader-runner": "^2.2.4",
    "@types/minimatch": "^3.0.5",
    "@types/resolve": "^1.20.2",
    "@types/rimraf": "^3.0.2",
    "@umijs/utils": "^4.0.0-rc.24",
    "@vercel/ncc": "^0.34.0",
    "dts-packer": "^0.0.3",
    "esno": "^0.16.3",
    "git-repo-info": "^2.1.1",
    "husky": "^8.0.1",
    "lerna": "^5.1.4",
    "lint-staged": "^13.0.2",
    "matcher": "^5.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "redbud": "workspace:*",
    "redbud-scripts": "workspace:*",
    "resolve": "^1.22.0",
    "rimraf": "^3.0.2",
    "turbo": "^1.2.16",
    "typescript": "^4.7.3",
    "vitest": "^0.15.1",
    "zx": "^4.3.0"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6.20.0"
  }
}
